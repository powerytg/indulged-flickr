<UserControl x:Class="Indulged.Plugins.Common.Renderers.WeightedTagButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="TagButton" BorderThickness="0" Background="Transparent"
                    FontSize="38" FontWeight="Light" Foreground="#448ccb" FontStretch="Condensed"
                    Click="OnTagButtonClick" />
            <Grid Width="42" Height="42">
                <Ellipse x:Name="BadgeIcon" Fill="#4d1a44"/>
                <TextBlock x:Name="BadgeLabel" Foreground="White" Opacity="0.65" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            </Grid>
        </StackPanel>
        
    </Grid>
</UserControl>