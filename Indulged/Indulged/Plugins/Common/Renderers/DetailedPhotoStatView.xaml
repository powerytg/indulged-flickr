<UserControl x:Class="Indulged.Plugins.Common.Renderers.DetailedPhotoStatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ViewIcon" Source="/Assets/Common/View-Light.png" VerticalAlignment="Center" Stretch="None" Grid.Column="0"
               Margin="4,4,4,4"/>
        <TextBlock x:Name="ViewLabel" Foreground="#ffffff" FontSize="24" VerticalAlignment="Center" Margin="12, 4, 4, 4" Grid.Column="1"/>

        <Image x:Name="CommentIcon" Source="/Assets/Common/View.png" VerticalAlignment="Center" Stretch="None" Grid.Column="2"
               Margin="4,4,4,4"/>
        <TextBlock x:Name="CommentLabel" Foreground="#ffffff" FontSize="24" VerticalAlignment="Center" Margin="12, 4, 4, 4" Grid.Column="3"/>

    </Grid>

</UserControl>