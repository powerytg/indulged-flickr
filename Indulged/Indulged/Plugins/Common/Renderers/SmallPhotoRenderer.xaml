<renderer:PhotoRendererBase x:Class="Indulged.Plugins.Common.Renderers.SmallPhotoRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renderer="clr-namespace:Indulged.Plugins.Common.Renderers"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Margin="2,2,2,2">
        <Image x:Name="ImageView" Stretch="UniformToFill"/>

        <!-- Stat view -->
        <renderer:PhotoStatView x:Name="StatView" Opacity="0.85"
                                Margin="3, 3, 3, 3" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</renderer:PhotoRendererBase>