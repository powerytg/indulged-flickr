<UserControl x:Class="Indulged.Plugins.ProFX.FXBottomPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Indulged.Plugins.ProFX"             
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Height="65">
    
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <SolidColorBrush Color="#000000" Opacity="0.85"/>
        </Grid.Background>
        
        <Border BorderThickness="0, 1, 0, 0">
            <Border.BorderBrush>
                <SolidColorBrush Color="#000000" Opacity="0.9"/>
            </Border.BorderBrush>
            
            <Grid x:Name="PanelContainer">
                <local:FXNormalStatusView x:Name="NormalStatusView"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>