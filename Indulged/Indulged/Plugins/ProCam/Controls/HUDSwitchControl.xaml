<UserControl x:Class="Indulged.Plugins.ProCam.Controls.HUDSwitchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
    Width="120" Height="26">
    
    <Grid x:Name="LayoutRoot" Tap="OnTap">
        <Image x:Name="Arrow" Source="/Assets/ProCam/OSDArrow.png"
               HorizontalAlignment="Left" VerticalAlignment="Center"
               Width="18" Height="10">
            <Image.RenderTransform>
                <RotateTransform x:Name="ArrowTransform"
                                 CenterX="9" CenterY="5" Angle="90" />
            </Image.RenderTransform>
        </Image>

        <Image x:Name="Label" Source="/Assets/ProCam/OSDOff.png"
               HorizontalAlignment="Right" VerticalAlignment="Center"
               Width="84" />

    </Grid>
</UserControl>