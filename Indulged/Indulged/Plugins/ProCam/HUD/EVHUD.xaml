<UserControl x:Class="Indulged.Plugins.ProCam.HUD.EVHUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 0">
                <GradientStop Color="#00000000" Offset="0"/>
                <GradientStop Color="#99000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!--Value list-->
        <StackPanel x:Name="ValuePanel" Orientation="Vertical"
                    VerticalAlignment="Center" HorizontalAlignment="Right">
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="ValuePanelTransform"/>
            </StackPanel.RenderTransform>            
        </StackPanel>
        
        <Canvas Width="300" Height="30" Background="Red" Opacity="0.4" VerticalAlignment="Center"/>
        
    </Grid>
</UserControl>