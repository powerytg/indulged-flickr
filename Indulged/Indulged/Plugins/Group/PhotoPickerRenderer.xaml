<UserControl x:Class="Indulged.Plugins.Group.PhotoPickerRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Margin="2">
        <Image x:Name="ImageView" Stretch="UniformToFill">
            <Image.Source>

                <BitmapImage UriSource="{Binding ImageUrl}" DecodePixelHeight="64" DecodePixelWidth="64"/>

            </Image.Source>
        </Image>

        <Border x:Name="BorderView" BorderThickness="2" IsHitTestVisible="False">
            <Border.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </Border.BorderBrush>
            
            <Border.Background>
                <SolidColorBrush Color="Transparent"/>
            </Border.Background>
        </Border>
        
    </Grid>
</UserControl>