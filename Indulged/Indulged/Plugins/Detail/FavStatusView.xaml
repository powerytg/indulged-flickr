<UserControl x:Class="Indulged.Plugins.Detail.FavStatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Height="160">
    
    <UserControl.RenderTransform>
        <CompositeTransform/>
    </UserControl.RenderTransform>
    
    <Grid x:Name="LayoutRoot" Margin="50, 20, 50, 20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="StatusLabel" Grid.Column="0" Text="{Binding Path=LocalizedResources.GenericSendingRequestText, Source={StaticResource LocalizedStrings}}" TextAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <ProgressBar x:Name="ProgressView" Grid.Column="1" VerticalAlignment="Center" Margin="20, 0, 20, 0" IsIndeterminate="True"/>
        
    </Grid>
</UserControl>